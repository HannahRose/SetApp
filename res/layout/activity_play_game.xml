<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/gameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlayGameActivity" >
   	
    <TableLayout  android:id="@+id/cardTable"
        android:layout_width="match_parent"
	    android:layout_height="fill_parent"
	    android:layout_centerInParent="true"
	    android:paddingBottom="@dimen/activity_vertical_margin"
	    android:paddingLeft="@dimen/activity_horizontal_margin"
	    android:paddingRight="@dimen/activity_horizontal_margin"
	    android:paddingTop="@dimen/activity_vertical_margin"
	    android:shrinkColumns="*"
	    android:stretchColumns="*" >
        
	    <TableRow
	        android:id="@+id/tableRow1"
	        style="@style/TableStyle" >
	    	
	    	<com.example.setapp.CardView android:id="@+id/buttonA1"
	        	style="@style/CardStyle" >
	    	</com.example.setapp.CardView>
	    	
	    	<com.example.setapp.CardView android:id="@+id/buttonB1"
	        	style="@style/CardStyle" >
	    	</com.example.setapp.CardView>
	    	
	    	<com.example.setapp.CardView android:id="@+id/buttonC1"
	        	style="@style/CardStyle" >
	    	</com.example.setapp.CardView>
	    	
	    </TableRow>
	    
	   <TableRow
	        android:id="@+id/tableRow2"
	        style="@style/TableStyle" >
	    	
	    	<com.example.setapp.CardView android:id="@+id/buttonA2"
	        	style="@style/CardStyle" >
	    	</com.example.setapp.CardView>
	    	
	    	<com.example.setapp.CardView android:id="@+id/buttonB2"
	        	style="@style/CardStyle" >
	    	</com.example.setapp.CardView>
	    	
	    	<com.example.setapp.CardView android:id="@+id/buttonC2"
	        	style="@style/CardStyle" >
	    	</com.example.setapp.CardView>
	    
	    </TableRow>
	    
	    <TableRow
	        android:id="@+id/tableRow3"
	        style="@style/TableStyle" >
	    	
	    	<com.example.setapp.CardView android:id="@+id/buttonA3"
	        	style="@style/CardStyle" >	    	</com.example.setapp.CardView>
	    	
	    	<com.example.setapp.CardView android:id="@+id/buttonB3"
	        	style="@style/CardStyle" >
	    	</com.example.setapp.CardView>
	    	
	    	<com.example.setapp.CardView android:id="@+id/buttonC3"
	        	style="@style/CardStyle" >
	    	</com.example.setapp.CardView>
	    	
	    </TableRow>
	    
	      <TableRow
	        android:id="@+id/tableRow4"
	        style="@style/TableStyle" >
	    	
	    	<com.example.setapp.CardView android:id="@+id/buttonA4"
	        	style="@style/CardStyle" >
	    	</com.example.setapp.CardView>
	    	
	    	<com.example.setapp.CardView android:id="@+id/buttonB4"
	        	style="@style/CardStyle" >
	    	</com.example.setapp.CardView>
	    	
	    	<com.example.setapp.CardView android:id="@+id/buttonC4"
	        	style="@style/CardStyle" >
	    	</com.example.setapp.CardView>
	    	
	    </TableRow>
	    
	    <TableRow
	        android:id="@+id/tableRow5"
	        style="@style/TableStyle" 
	        android:visibility="gone" >
	    	
	    	<com.example.setapp.CardView android:id="@+id/buttonA5"
	        	style="@style/CardStyle" >
	    	</com.example.setapp.CardView>
	    	
	    	<com.example.setapp.CardView android:id="@+id/buttonB5"
	        	style="@style/CardStyle" >
	    	</com.example.setapp.CardView>
	    	
	    	<com.example.setapp.CardView android:id="@+id/buttonC5"
	        	style="@style/CardStyle" >
	    	</com.example.setapp.CardView>
	    	
	    </TableRow> 
    
    </TableLayout>
    
    <TextView android:id="@+id/numSets"
        style="@style/SetsFoundStyle"
        android:text="@string/default_button"
        android:layout_toLeftOf="@id/cardTable"> </TextView>
    
    <FrameLayout android:id="@+id/notASet"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="110dp" 
        android:background="#dddddddd"
        android:paddingBottom="@dimen/frame_vertical_margin"
	    android:paddingLeft="@dimen/frame_horizontal_margin"
	    android:paddingRight="@dimen/frame_horizontal_margin"
	    android:paddingTop="@dimen/frame_vertical_margin"
        android:visibility="gone" > 
        
        <Button android:id="@+id/notSetText"
        android:text="@string/not_a_set"
        android:background="#dddddddd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_gravity="top|center"> </Button>
        
        <Button android:id="@+id/dismiss"
        android:text="@string/ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:onClick="dismissNotSet"
        android:layout_gravity="bottom|center"> </Button>
    
    </FrameLayout>
	    
</RelativeLayout>
